<%= form_for @payment, remote: true, html: { class: "form-inline" } do |f| %>
  <%= hidden_field_tag :book_id, @book.id %>
  <div class="form-group">
    <div class="input-group">
      <%= f.text_field :date, class: "form-control date-picker" %>
	</div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <%= f.collection_select :user_id, @book.participant, :id, :name, {}, class: "form-control" %>
	</div>
  </div>
  <div class="form-group">
    <div class="input-group">
      <%= f.text_field :amount, class: "form-control", placeholder: "Add a payment..." %>
    </div>
  </div>
  <div class="form-group">
    <div class="input-group">
      <%= f.select :unit, { "￥": 0, "$": 1, "€": 2 }, {}, class: "form-control" %>
    </div>
  </div>
  <%= f.button "Add", class: "btn btn-primary" %>
<% end %>